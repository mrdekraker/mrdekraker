{
  "version": 2,
  "builds": [
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {
      "src": "/api/sanity",
      "dest": "https://your-sanity-project-id.api.sanity.io/v1/graphql/your-dataset",
      "methods": ["GET"]
    },
    {
      "handle": "filesystem",
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
